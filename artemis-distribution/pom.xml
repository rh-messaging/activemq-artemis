      <!-- Management Console Dependencies -->
       <dependency>
           <groupId>org.apache.activemq</groupId>
           <artifactId>artemis-console</artifactId>
           <version>${project.version} </version>
           <type>war</type>
       </dependency>
       <dependency>
           <groupId>org.apache.activemq</groupId>
           <artifactId>activemq-branding</artifactId>
